<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rusangiza.jean_leman.flipnlearn.create_a_card_front"
    android:background="#166fe6">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CREATE CARD"
        android:id="@+id/create_card_front_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Front text"
        android:id="@+id/front_text"
        android:layout_below="@+id/create_card_front_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/front_text_input"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/front_text"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textColor="#010101"
        android:autoText="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/front_of_card"
        android:background="#ffffff"
        android:height="270dp"
        android:width="200dp"
        android:textAlignment="center"
        android:textSize="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/front_text_input"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
